---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Home | AI Agent Frameworks">
  <div class="container mx-auto px-4 py-12">
    <div class="text-center">
      <h1 class="text-4xl font-bold mb-6">Agentbuilders.dev</h1>
      <p class="text-xl mb-8">
        Discover and compare AI agent development frameworks
      </p>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        <a href="/frameworks" class="p-6 border rounded-lg hover:shadow-md transition-shadow">
          <h2 class="text-2xl font-bold mb-2">Framework Directory</h2>
          <p>Browse the full list of AI agent frameworks</p>
        </a>
        <a href="/resources" class="p-6 border rounded-lg hover:shadow-md transition-shadow">
          <h2 class="text-2xl font-bold mb-2">Resources</h2>
          <p>Tutorials, guides, and documentation</p>
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
